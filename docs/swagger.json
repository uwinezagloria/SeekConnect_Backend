{
  "swagger": "2.0",
  "info": {
    "title": "SeekConnect Api",
    "description": "API documentation for SeekConnect with all  CRUD operations",
    "version": "1.0.0"
  },
  "host":"seekconnect-backend-1.onrender.com",
  "basePath": "",
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/signUp": {
      "post": {
        "summary": "Create account ",
        "description": "Create a new account on SeekConnect ",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/User"
            },
            "required": true,
            "description": "User object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account created successfully"
          }
        }
      }
    },
    "/otp-verify": {
      "post": {
        "summary": "verify account ",
        "description": "verify your  account on SeekConnect ",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Otp"
            },
            "required": true,
            "description": "User object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account verified successfully"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login user",
        "description": "Authenticate and login user",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Login"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }

        },
    "/resetPassword": {
      "post": {
        "summary": "Reset Password",
        "description": " user reset new Password ",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/ResetPassword"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful  resert password"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/lost": {
      "post": {
        "summary": "Post A lost Document",
        "description": " post your lost document",
        "tags": [
          "Document"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/LostDocument"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful  posted a lost document"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      },
      "patch": {
        "summary": "update A lost Document",
        "description": " update  lost document",
        "tags": [
          "Document"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "schema": {
              "$ref": "#/definitions/LostDocument"
            },
            "required": true,
            "description": "User credentials"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/LostDocument"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful  updated a lost document"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      },
      "delete": {
        "summary": "delete lost Document",
        "description": " delete   lost document",
        "tags": [
          "Document"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "schema": {
              "$ref": "#/definitions/LostDocument"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful  removed lost documents"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      },
      "get": {
        "summary": "get lost Documents",
        "description": " get all  lost documents",
        "tags": [
          "Document"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/LostDocument"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful  got  lost documents"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "FirstName": {
          "type": "string"
        },
        "LastName": {
          "type": "string"
        },
        "Email": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        },
        "ConfirmPassword": {
          "type": "string"
        },
        "otp": {
          "type": "number"
        },
        "otpExpiration": {
          "type": "string"
        },
        "otpVerified": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "FirstName",
        "LastName",
        "Email",
        "Password",
        "ConfirmPassword"
      ]
    },
    "Otp": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "number"
        }
      },
      "required": [
        "otp"
      ]
    },
    "Login": {
      "type": "object",
      "properties": {
        "Email": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        }
      },
      "required": [
        "Email",
        "Password"
      ]
    },
    
    "ResetPassword": {
      "type": "object",
      "properties": {
        "Email": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        },
        "ConfirmPassword": {
          "type": "string"
        }
      },
      "required": [
        "Email",
        "Password",
        "ConfirmPassword"
      ]
    },
    "LostDocument": {
      "type": "object",
      "properties": {
        "UserId": {
          "type": "string"
        },
        "DocumentType": {
          "type": "string",
          "enum":["Drivers License","National Id Card","Health Insurance Card","Refugee Identity Document","Othe Form Of Identity"]
        },
        "NameOnDocument": {
          "type": "string"
        },
        "PlaceOfIssueOnDocument":{
          "type":"string"
        },
        "LostDate":{
          "type":"string",
          "format":"date"
        },
        "LostPlace":{
     "$ref":"#definitions/Place"
        },
        "Comment":{
          "type":"string"
        },
        "Found":{
          "type":"boolean",
          "default":false
        }
      },
      "required": [
        "UserId",
        "DocumentType",
        "NameOnDocument",
       " PlaceOfIssueOnDocument",
       "LostDate",
       "LostPlace"
      ]
     
    },

    "Place": {
      "type": "object",
      "properties": {
        "Country": {
          "type": "string"
        },
        "Province": {
          "type": "string"
        },
        "District": {
          "type": "string"
        },
        "Sector": {
          "type": "string"
        },
        "Cell": {
          "type": "string"
        },
        "Village": {
          "type": "string"
        }
      },
      "required":[
        "Country",
        "Province",
        "District",
        "Sector",
        "Cell",
        "Village"
      ]
    }
  }
}