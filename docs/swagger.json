{
  "swagger": "2.0",
  "info": {
    "title": "SeekConnect Api",
    "description": "API documentation for SeekConnect with all  CRUD operations",
    "version": "1.0.0"
  },
  "host": "localhost:10000",
  "basePath": "",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/signUp": {
      "post": {
        "summary": "Create account ",
        "description": "Create a new account on SeekConnect ",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/User"
            },
            "required": true,
            "description": "User object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account created successfully"
          }
        }
      }
    },
    "/otp-verify": {
      "post": {
        "summary": "verify account ",
        "description": "verify your  account on SeekConnect ",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Otp"
            },
            "required": true,
            "description": "User object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account verified successfully"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login user",
        "description": "Authenticate and login user",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Login"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }

        },
    "/resetPassword": {
      "post": {
        "summary": "Reset Password",
        "description": " user reset new Password ",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/ResetPassword"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful  resert password"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "FirstName": {
          "type": "string"
        },
        "LastName": {
          "type": "string"
        },
        "Email": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        },
        "ConfirmPassword": {
          "type": "string"
        },
        "otp": {
          "type": "number"
        },
        "otpExpiration": {
          "type": "string"
        },
        "otpVerified": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "FirstName",
        "LastName",
        "Email",
        "Password",
        "ConfirmPassword"
      ]
    },
    "Otp": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "number"
        }
      },
      "required": [
        "otp"
      ]
    },
    "Login": {
      "type": "object",
      "properties": {
        "Email": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    
    "ResetPassword": {
      "type": "object",
      "properties": {
        "Email": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        },
        "ConfirmPassword": {
          "type": "string"
        }
      },
      "required": [
        "Email",
        "Password",
        "ConfirmPassword"
      ]
    },
    
    "place": {
      "type": "object",
      "properties": {
        "Country": {
          "type": "string"
        },
        "District": {
          "type": "string"
        },
        "District": {
          "type": "string"
        }
      }
    }
  }
}